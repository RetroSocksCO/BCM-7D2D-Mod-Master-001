<configs>
	<!-- ADD CRAFTING WINDOWS TO STATIONS -->
	<append xpath="/xui/ruleset">
		
		<!-- *** CHEMISTRY_STATION_micro -->
		<window_group name="workstation_chemistryStationMicro" controller="XUiC_WorkstationWindowGroup" open_backpack_on_open="true" close_compass_on_open="true" defaultSelected="bp.content">
			<window name="windowCraftingList"/>
			<window name="craftingInfoPanel"/>
			<window name="windowCraftingQueue"/>
			<window name="windowFuel" />
			<window name="windowOutput" />
			<window name="windowNonPagingHeader" />
		</window_group>
		
		<!-- *** WORKBENCH_micro -->
		<window_group name="workstation_workbenchMicro" controller="XUiC_WorkstationWindowGroup" open_backpack_on_open="true" close_compass_on_open="true" defaultSelected="bp.content">
			<window name="windowCraftingList"/>
			<window name="craftingInfoPanel"/>
			<window name="windowCraftingQueue"/>
			<window name="windowOutput" />
			<window name="windowNonPagingHeader" />
			<!-- <window name="windowCombine" /> -->
		</window_group>	
	
	</append>
	
</configs>